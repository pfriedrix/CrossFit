@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

 <style>
        body {
            font-family: 'Arial', sans-serif; /* Changing font for a fresh look */
            background-color: #f0f8ff; /* Light sky blue background */
        }
        h1 {
            text-align: center;d
            color: #333333; /* Dark grey color for heading */
        }
        .row {
            display: flex;
            justify-content: center;
            padding: 20px;
        }
        .col-md-4 {
            background-color: #ffffff; /* White background for the form */
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
        }
        .form-control {
            border: 2px solid #007bff; /* Blue border for input fields */
            border-radius: 4px;
            margin-bottom: 15px; /* Increased margin */
        }
        .btn-primary {
            background-color: #4CAF50; /* Green background for button */
            border: none;
            padding: 12px 20px;
            border-radius: 4px;
        }
        a {
            color: #007bff; /* Blue color for links */
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
        /* Additional styles for other elements */
    </style>

<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.FullName" class="form-control" placeholder="" disabled />
                <label asp-for="Input.FullName" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.EmailAddress" class="form-control" placeholder="" disabled/>
                <label asp-for="Input.EmailAddress" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="" disabled/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
