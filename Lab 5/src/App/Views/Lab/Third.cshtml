@model InputOutputModel
@{
    ViewData["Title"] = "Third Lab";
}

    <style>
        .text-center {
            text-align: center;
        }
        .display-4 {
            font-size: 2rem; /* Adjust as needed */
            font-weight: bold;
        }
        .form-section {
            margin: 20px 0;
        }
        .form-control {
            padding: 10px;
            margin: 10px 0;
            width: 100%; /* Full width */
        }
        .btn-primary {
            background-color: #007bff;
            border: none;
            color: white;
            padding: 15px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            transition-duration: 0.4s;
            cursor: pointer;
        }
        .btn-primary:hover {
            background-color: white;
            color: black;
            border: 2px solid #007bff;
        }
        /* Additional responsive and aesthetic styles */
    </style>


<div class="text-center">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <form asp-controller="Lab" asp-action="Third" method="get">
            <div class="form-section">
                <div class="form-floating mb-3">
                    <input asp-for="InputValue" class="form-control" aria-label="Input value" placeholder="Enter value"/>
                    <label for="InputValue">Input Value</label>
                </div>
                <div class="form-floating mb-3">
                    <input value="@Model.OutputValue" class="form-control" aria-label="Output value" placeholder="Result" readonly/>
                    <label for="OutputValue">Output Value</label>
                </div>
                <button id="process" type="submit" class="btn btn-lg btn-primary">Process</button>
            </div>
        </form>
    </div>
